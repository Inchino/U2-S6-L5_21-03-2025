@model GestionaleHotel.ViewModels.PrenotazioneDetailViewModel

<h2>Elimina Prenotazione</h2>
<p>Sei sicuro di voler eliminare la prenotazione del cliente <strong>@Model.ClienteNomeCompleto</strong> per la camera <strong>@Model.CameraNumero</strong>?</p>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="PrenotazioneId" />
    <button type="submit" class="btn btn-danger">Elimina</button>
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>
