@model GestionaleHotel.ViewModels.PrenotazioneDetailViewModel

<h2>Conferma eliminazione</h2>

<div>
    <p>Sei sicuro di voler eliminare questa prenotazione?</p>

    <dl class="row">
        <dt class="col-sm-3">Cliente</dt>
        <dd class="col-sm-9">@Model.ClienteNomeCompleto</dd>

        <dt class="col-sm-3">Camera</dt>
        <dd class="col-sm-9">@Model.CameraNumero</dd>

        <dt class="col-sm-3">Periodo</dt>
        <dd class="col-sm-9">@Model.DataInizio.ToShortDateString() - @Model.DataFine.ToShortDateString()</dd>

        <dt class="col-sm-3">Stato</dt>
        <dd class="col-sm-9">@Model.Stato</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PrenotazioneId" />
        <button type="submit" class="btn btn-danger">Elimina</button>
        <a asp-action="Index" class="btn btn-secondary">Annulla</a>
    </form>
</div>
