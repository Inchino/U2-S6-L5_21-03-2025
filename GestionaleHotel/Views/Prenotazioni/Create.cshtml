@model GestionaleHotel.ViewModels.PrenotazioneCreateViewModel

<h2>Aggiungi Nuova Prenotazione</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ClienteId">Cliente</label>
        <select asp-for="ClienteId" asp-items="Model.Clienti" class="form-control" required>
            <option value="">-- Seleziona un Cliente --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CameraId">Camera</label>
        <select asp-for="CameraId" asp-items="Model.CamereDisponibili" class="form-control" required>
            <option value="">-- Seleziona una Camera --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DataInizio"></label>
        <input asp-for="DataInizio" type="date" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="DataFine"></label>
        <input asp-for="DataFine" type="date" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Stato"></label>
        <select asp-for="Stato" class="form-control">
            <option value="Confermata">Confermata</option>
            <option value="In Attesa">In Attesa</option>
            <option value="Annullata">Annullata</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Salva</button>
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>
