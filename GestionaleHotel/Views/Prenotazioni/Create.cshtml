@model GestionaleHotel.ViewModels.PrenotazioneCreateViewModel

<h2>Aggiungi Nuova Prenotazione</h2>

@* Messaggi di errore *@
@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ClienteId"></label>
        <select asp-for="ClienteId" asp-items="Model.Clienti" class="form-control"></select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CameraId"></label>
        <select asp-for="CameraId" asp-items="Model.CamereDisponibili" class="form-control"></select>
        <span asp-validation-for="CameraId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataInizio"></label>
        <input asp-for="DataInizio" class="form-control" type="date" />
        <span asp-validation-for="DataInizio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataFine"></label>
        <input asp-for="DataFine" class="form-control" type="date" />
        <span asp-validation-for="DataFine" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Stato"></label>
        <select asp-for="Stato" class="form-control">
            <option value="">-- Seleziona Stato --</option>
            <option value="Confermata">Confermata</option>
            <option value="In Attesa">In Attesa</option>
            <option value="Annullata">Annullata</option>
        </select>
        <span asp-validation-for="Stato" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Salva</button>
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>