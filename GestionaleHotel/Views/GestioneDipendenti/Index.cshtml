@model IEnumerable<GestionaleHotel.Models.ApplicationUser>

<h2>Gestione Dipendenti</h2>

<a asp-action="Create" class="btn btn-primary">Aggiungi Nuovo Dipendente</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Email</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Data di nascita</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var utente in Model)
        {
            <tr>
                <td>@utente.Email</td>
                <td>@utente.FirstName</td>
                <td>@utente.LastName</td>
                <td>@utente.BirthDate?.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@utente.Id" class="btn btn-warning">Modifica</a>
                    <a asp-action="Delete" asp-route-id="@utente.Id" class="btn btn-danger">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
