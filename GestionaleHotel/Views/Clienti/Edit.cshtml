@model GestionaleHotel.ViewModels.ClienteEditViewModel

<h2>Modifica Cliente</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="ClienteId" />
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Cognome"></label>
        <input asp-for="Cognome" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Salva</button>
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>
