@model GestionaleHotel.ViewModels.CameraEditViewModel

<h2>Modifica Camera</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="CameraId" />

    <div class="form-group">
        <label asp-for="Numero"></label>
        <input asp-for="Numero" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Prezzo"></label>
        <input asp-for="Prezzo" type="number" step="0.01" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Disponibile"></label>
        <select asp-for="Disponibile" class="form-control">
            <option value="true">Disponibile</option>
            <option value="false">Non Disponibile</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Salva</button>
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>
